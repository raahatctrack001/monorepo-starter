{
  "compilerOptions": {
    "target": "ES2020",             // upgraded, supports modern syntax
    "module": "CommonJS",           // for current Node runtimes
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",     // ensure proper resolution behavior
    "resolveJsonModule": true,      // if you import .json files
    "sourceMap": true,              // optional but helpful for debugging
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
